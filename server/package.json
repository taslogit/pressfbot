{
  "name": "pressf-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "worker": "node worker.js",
    "smoke": "node scripts/miniApiSmoke.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.js\"",
    "format:check": "prettier --check \"**/*.js\"",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "bull": "^3.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "multer": "^2.0.2",
    "pg": "^8.11.0",
    "telegraf": "^4.12.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "/migrations.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!index.js",
      "!worker.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 12,
        "functions": 12,
        "lines": 14,
        "statements": 12
      },
      "**/utils/errors.js": { "branches": 70, "functions": 70, "lines": 70, "statements": 70 },
      "**/utils/sanitize.js": { "branches": 70, "functions": 70, "lines": 70, "statements": 70 },
      "**/utils/adaptiveRateLimit.js": { "branches": 70, "functions": 70, "lines": 70, "statements": 70 },
      "**/utils/safeJson.js": { "branches": 70, "functions": 70, "lines": 70, "statements": 70 },
      "**/validation/index.js": { "branches": 70, "functions": 70, "lines": 70, "statements": 70 }
    }
  }
}
