FROM node:18-alpine
WORKDIR /usr/src/app
COPY server/package*.json ./
# Use npm install when package-lock.json is missing to support builds without lockfile
RUN npm install --production --no-audit --no-fund
COPY server/ .
# Create static directories for images and avatars
RUN mkdir -p static static/avatars
ENV PORT=3000
EXPOSE 3000
CMD ["node", "index.js"]
